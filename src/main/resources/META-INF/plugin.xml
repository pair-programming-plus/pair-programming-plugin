<idea-plugin>
    <idea-version since-build="170.*"/>
    <id>io.ppp.idea-plugin</id>
    <name>ppp.io</name>
    <vendor email="support@microconfig.io" url="http://microconfig.io">Microconfig.IO</vendor>

    <description><![CDATA[
    Plugin for remote pair programming
    More info at https://github.com/https://github.com/pair-programming-plus/pair-programming-plugin
    ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="io.microconfig.plugin.run.RunConfigType" />
        <programRunner implementation="io.microconfig.plugin.run.Runner"/>
    </extensions>
</idea-plugin>